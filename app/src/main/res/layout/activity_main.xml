<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contain1"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Summary"
                android:textColor="@color/blue"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:constraint_referenced_ids="item1,item2,item3"
                app:flow_horizontalGap="10dp"
                app:flow_maxElementsWrap="3"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text" />


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed"

                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/shipment"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ship"

                        app:neumorph_shapeAppearance="@style/NeumorphImage" />

                    <soup.neumorphism.NeumorphTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Shipping"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/Payment"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/payment" />

                    <soup.neumorphism.NeumorphTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Payment"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/summary"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/ship" />

                    <soup.neumorphism.NeumorphTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="summary"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>


            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Shipping Address"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@id/flow"
                tools:ignore="MissingConstraints" />

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="flat">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:padding="10dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text="Divya Bhatia"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text="Cancel"
                        android:textColor="@color/red"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"


                        />

                    <TextView
                        android:id="@+id/adrs1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"

                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text="Dhruv Marg ,Guru-Nanak Pura"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:ignore="MissingConstraints"


                        />

                    <TextView
                        android:id="@+id/adrs2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adrs1"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="20dp"

                        android:paddingTop="8dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text="Raja Park ,Jaipur ,Rajastha"
                        android:textColor="@color/black"
                        android:textSize="15dp"


                        tools:ignore="MissingConstraints" />


                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Delivery Method"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@id/details"
                tools:ignore="MissingConstraints" />


            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:constraint_referenced_ids="item4,item5,item6"
                app:flow_horizontalGap="10dp"
                app:flow_maxElementsWrap="3"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text3" />


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed"

                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/method1"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fedex"

                        app:neumorph_shapeAppearance="@style/NeumorphImage" />

                    <soup.neumorphism.NeumorphTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1-3days"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="flat">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/Pmethod2"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"

                        android:src="@drawable/usps" />

                    <soup.neumorphism.NeumorphTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2-3days"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="flat">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/method3"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"

                        android:src="@drawable/dhl" />

                    <soup.neumorphism.NeumorphTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1-5days"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Payment Method"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@id/flow2"
                tools:ignore="MissingConstraints" />

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text4"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="flat">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/img"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:src="@drawable/master"
                        app:neumorph_shapeAppearance="@style/NeumorphImage"
                        />
                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Master Card"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:paddingTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_toRightOf="@id/img"/>
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/rightarrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />


                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

            <RelativeLayout
                android:id="@+id/rela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pay">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Delivery: "
                    android:textColor="@color/black"
                    android:textSize="10dp"



                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="20$"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                  android:layout_alignParentRight="true"


                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Total: "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_below="@+id/text5"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="400$"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                   android:layout_below="@id/text6"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/rela"
                >
                <Button
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Confirm Payment"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/shape"
                    android:backgroundTint="@color/blue"



                    />

            </RelativeLayout>


            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:constraint_referenced_ids="item10,item11,item12,item13,item14"
                app:flow_horizontalGap="10dp"
                app:flow_maxElementsWrap="5"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rela2" />


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed"

                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/homeP"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/home"

                        app:neumorph_shapeAppearance="@style/NeumorphImage" />



                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/listP"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/list" />



                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/cartP"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/cart" />



                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/likeP"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/like" />



                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/item14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:neumorph_shadowElevation="5sp"
                app:neumorph_shapeAppearance="@style/NeumorphCard"
                app:neumorph_shapeType="pressed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <soup.neumorphism.NeumorphImageView
                        android:id="@+id/userP"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/user11" />



                </androidx.appcompat.widget.LinearLayoutCompat>

            </soup.neumorphism.NeumorphCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>